{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container-fluid" id="login">
        <div class="img-login"></div>
        <div class="row m-0">
            <div class="col-xs-12 col-md-8  col-lg-4 mx-auto p-0">
                <div class="card card-login">
                    <form method="post">
                        <div class="card-header">
                            <h1 class="mb-3 font-weight-normal">Please sign in</h1>
                        </div>
                        <div class="card-body">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <div class="pt-1">
                                <label for="inputPseudoname">Pseudoname</label>
                                <input type="text" value="{{ last_username }}" name="pseudoname" id="inputPseudoname"
                                       class="form-control"
                                       placeholder="Pseudo" required autofocus>
                            </div>
                            <div class="pt-3">
                                <label for="inputPassword">Password</label>
                                <input type="password" name="password" id="inputPassword" class="form-control"
                                       placeholder="Password"
                                       required>
                            </div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <div class="pt-1 text-right">
                                <a class="third after" href="#"><small>Forgot password ?</small></a>
                            </div>
                            <hr />
                            <div class="pt-1 text-center">
                                <a class="first after" href="{{ path('app_register') }}">Create your account Now!!</a>
                            </div>
                        </div>
                        <div class="card-footer text-muted text-center">
                            <button class="btn btn-lg btn-outline-light w-50 btn-login-sign" type="submit">
                                Sign in
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
