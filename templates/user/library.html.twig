{% extends 'comicloaner.html.twig' %}

{% block title %}My Comic Library{% endblock %}

{% block body %}
    <div class="container-fluid m-0 p-0">
        <div class="row justify-content-center">
            {% for comic in comics %}
                <div class="card comic-card col-md-2 mb-4 mx-2 p-0">
                    <div class="card-header text-dark">
                        <div class="row no-gutters p-2 m-0">
                            <div class="col-md-10 m-0">
                                <h5 class="marvel-title">{{ comic.title }}</h5>
                            </div>
                        </div>
                    </div>
                    <div class="card-body m-0 p-0 rounded-0">
                            <img src="{{ comic.ThumbnailPicture.getPictureSquareSD }}" class="card-img-top img-fluid rounded-0"
                                 alt="{{ comic.title }}">
                    </div>
                    <div class="card-footer text-right">
                        <button type="button" class="btn btn-danger button-readmore">Read more ...</button>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="row text-center">
            <div class="navigation  mx-auto">
                {{ knp_pagination_render(comics) }}
            </div>
        </div>
    </div>
{% endblock %}
